{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "./server/dist",
    "baseUrl": ".",
    "paths": {
      "@@/*": ["./*"],
      "@/*": ["./server/src/*"]
    },
    "allowJs": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "swc": true,
    "require": ["tsconfig-paths/register"],
    "files": true
  },
  "files": ["server/src/global.d.ts"],
  "include": ["server/src/**/*"],
  "exclude": ["node_modules", "server/dist"]
}
