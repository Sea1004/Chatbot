{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./server/dist",
    "baseUrl": ".",
    "paths": {
      "@@/*": ["./*"],
      "@/*": ["./server/src/*"]
    },
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "files": true
  },
  "files": ["server/src/global.d.ts"],
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "server/dist"]
}
