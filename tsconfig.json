{
  "exclude": ["node_modules", "server/dist"],
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "target": "esnext",
    "module": "commonjs",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@@/*": ["./*"],
      "@/*": ["./server/src/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"]
  }
}
